<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HighScore"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:id="@+id/high_score_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/title_high_score">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/high_score"
            android:textColor="@color/whiteColor"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:background="@drawable/layout_ripple"
        android:backgroundTint="@color/clearColor"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_high_score"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>